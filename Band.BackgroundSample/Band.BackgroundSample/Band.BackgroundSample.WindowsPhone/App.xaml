<Application
    x:Class="Band.BackgroundSample.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:backgroundSample="using:Band.BackgroundSample"
    xmlns:valueConverters="using:Band.BackgroundSample.XamlExtensions.ValueConverters">

    <Application.Resources>
        <ResourceDictionary>
            <backgroundSample:ViewModelLocator x:Key="MainAppLocator" />
            
            <valueConverters:InverseBooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
